<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/darker_gray"
    android:orientation="vertical">

    <TextView
        android:id="@+id/track_selection_dialog_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#696969"
        android:padding="8dp"
        android:text="Subtitles"
        android:textAlignment="center"
        android:textColor="#ffa500"
        android:textSize="20sp" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#ffa500"
        android:padding="4dp" />

    <!--TODO : recyclerview for list of subtitles-->
    <TextView
        android:id="@+id/subtitle_fa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:padding="10dp"
        android:text="persian subtitle"/>

    <TextView
        android:id="@+id/subtitle_en"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:padding="10dp"
        android:text="English subtitle"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/cancel_dialog_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#696969"
            android:padding="4dp"
            android:text="Cancel"
            android:textSize="14dp" />

    </LinearLayout>

</LinearLayout>